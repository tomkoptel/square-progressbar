<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <net.yscs.android.square_progressbar_example.SquareProgressView
        android:id="@+id/bar"
        app:progressWidth="8dp"
        app:progressOffloat="7dp"
        app:progressColor="#fe4040"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timerContainer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/timerContainer"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timerContainer">

        <RelativeLayout
            android:background="@drawable/timer_shape"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="200"
                android:textSize="13sp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:background="@drawable/quiz_timer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:id="@+id/seconds"/>

            <TextView
                android:layout_toRightOf="@id/seconds"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="BEKREFT"/>
        </RelativeLayout>
    </RelativeLayout>
</merge>